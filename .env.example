# Environment configuration template for Stable Diffusion API

# =============================================================================
# GPU Configuration
# =============================================================================
# Which GPU device to use (0 for first GPU, 1 for second, etc.)
CUDA_VISIBLE_DEVICES=0

# =============================================================================
# API Configuration
# =============================================================================
# Port for production API
API_PORT=8000
# Port for development API
DEV_API_PORT=8001
# Port for nginx reverse proxy
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# Model Configuration
# =============================================================================
# Directory to cache downloaded models
MODEL_CACHE_DIR=./models
# Hugging Face model name to use
MODEL_NAME=runwayml/stable-diffusion-v1-5

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum number of concurrent generation requests
MAX_CONCURRENT_REQUESTS=1
# Timeout for image generation in seconds
GENERATION_TIMEOUT=60
# Enable attention slicing for memory optimization
ENABLE_ATTENTION_SLICING=true
# Enable CPU offloading for memory optimization
ENABLE_CPU_OFFLOAD=true

# =============================================================================
# Resource Limits
# =============================================================================
# Docker memory limit
MEMORY_LIMIT=8G
# Docker CPU limit
CPU_LIMIT=4.0

# =============================================================================
# Logging and Debugging
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
# Allowed hosts for CORS (comma-separated or * for all)
ALLOWED_HOSTS=*